{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    // "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*",
    "app.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
